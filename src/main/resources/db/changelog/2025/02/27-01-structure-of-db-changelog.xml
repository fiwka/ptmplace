<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1740675357616-1" author="Константин">
        <createSequence incrementBy="1" sequenceName="cities_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1740675357616-2" author="Константин">
        <createSequence incrementBy="1" sequenceName="routes_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1740675357616-3" author="Константин">
        <createSequence incrementBy="1" sequenceName="users_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1740675357616-4" author="Константин">
        <createTable tableName="cities">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cities"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1740675357616-5" author="Константин">
        <createTable tableName="routes">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_routes"/>
            </column>
            <column name="mode" type="SMALLINT"/>
            <column name="departure_city_id" type="BIGINT"/>
            <column name="arrival_city_id" type="BIGINT"/>
            <column name="departure" type="DATETIME"/>
            <column name="arrival" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1740675357616-6" author="Константин">
        <createTable tableName="tickets">
            <column name="place" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tickets"/>
            </column>
            <column name="route_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tickets"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1740675357616-7" author="Константин">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1740675357616-8" author="Константин">
        <addForeignKeyConstraint baseColumnNames="arrival_city_id" baseTableName="routes"
                                 constraintName="FK_ROUTES_ON_ARRIVALCITY" referencedColumnNames="id"
                                 referencedTableName="cities"/>
    </changeSet>
    <changeSet id="1740675357616-9" author="Константин">
        <addForeignKeyConstraint baseColumnNames="departure_city_id" baseTableName="routes"
                                 constraintName="FK_ROUTES_ON_DEPARTURECITY" referencedColumnNames="id"
                                 referencedTableName="cities"/>
    </changeSet>
    <changeSet id="1740675357616-10" author="Константин">
        <addForeignKeyConstraint baseColumnNames="owner_id" baseTableName="tickets" constraintName="FK_TICKETS_ON_OWNER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1740675357616-11" author="Константин">
        <addForeignKeyConstraint baseColumnNames="route_id" baseTableName="tickets" constraintName="FK_TICKETS_ON_ROUTE"
                                 referencedColumnNames="id" referencedTableName="routes"/>
    </changeSet>

</databaseChangeLog>